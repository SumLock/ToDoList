<UserControl x:Class="Notforget.ToDoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notforget"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" Background="Aqua">
            <Rectangle Stroke="Black" StrokeThickness="2" Height="20" Width="20" Margin="20,0,0,0" > </Rectangle>
            <TextBox x:Name="TaskText" BorderThickness="0" Height="30" Width="210" Margin="10,0,0,0" Background="Aqua"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
